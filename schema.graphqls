type User {
  id: ID!
  email: String!
  username: String!
  type: Int!
}

type Token {
  token: String!
}

type Product {
  id: ID!
  name: String!
  description: String!
  price: Int!
  stock: Int!
}

type UpdateInventoryResponse {
  success: Boolean!
}

type Order {
  id: ID!
  user_id: ID!
  price_total: Int!
  quantity: Int!
  order_products: [OrderProduct!]!
}

type AllOrdersOrder {
  id: ID!
  user_id: ID!
  price_total: Int!
  quantity: Int!
}

type OrderProduct {
  product_id: ID!
  quantity: Int!
  price: Int!
}

input PlaceOrderProduct {
  product_id: ID!
  quantity: Int!
}

input NewUser {
  email: String!
  username: String!
  password: String!
  type: Int!
}

input Login {
  email: String!
  password: String!
}

input CreateProduct {
  name: String!
  description: String!
  price: Int!
  stock: Int!
}

input UpdateInventory {
  id: ID!
  type: Int!
  number: Int!
}

input PlaceOrder {
  order_products: [PlaceOrderProduct!]!
}

type Query {
  user(id: ID!): User!
  users: [User!]!

  product(id: ID!): Product!
  products: [Product!]!

  order(id: ID!): Order!
  orders: [AllOrdersOrder!]!
}

type Mutation {
  registerUser(input: NewUser!): User!
  login(input: Login!): Token!
  createProduct(input: CreateProduct!): Product!
  updateInventory(input: UpdateInventory!): UpdateInventoryResponse!
  placeOrder(input: PlaceOrder!): Order!
}
